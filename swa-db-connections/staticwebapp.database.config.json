{
  "$schema": "https://github.com/Azure/data-api-builder/releases/latest/download/dab.draft.schema.json",
  "data-source": {
    "database-type": "mssql",
    "connection-string": "@env('DATABASE_CONNECTION_STRING')",
    "options": {
      "set-session-context": true
    }
  },
  "runtime": {
    "rest": {
      "enabled": true,
      "path": "/data-api/rest"
    },
    "graphql": {
      "enabled": false
    },
    "host": {
      "mode": "development",
      "authentication": {
        "provider": "StaticWebApps"
      }
    }
  },
  "entities": {
    "clients": {
      "source": "dbo.clients",
      "permissions": [
        {
          "role": "authenticated",
          "actions": ["read", "create", "update"]
        }
      ]
    },
    "contracts": {
      "source": "dbo.contracts",
      "permissions": [
        {
          "role": "authenticated",
          "actions": ["read", "create", "update"]
        }
      ]
    },
    "contacts": {
      "source": "dbo.contacts",
      "permissions": [
        {
          "role": "authenticated",
          "actions": ["read", "create", "update", "delete"]
        }
      ]
    },
    "payments": {
      "source": "dbo.payments",
      "permissions": [
        {
          "role": "authenticated",
          "actions": ["read", "create", "update", "delete"]
        }
      ]
    },
    "payment_periods": {
      "source": "dbo.payment_periods",
      "permissions": [
        {
          "role": "authenticated",
          "actions": ["read"]
        }
      ]
    },
    "clients_by_provider": {
      "source": {
        "object": "dbo.clients_by_provider_view",
        "type": "view",
        "key-fields": ["client_id"]
      },
      "permissions": [
        {
          "role": "authenticated",
          "actions": ["read"]
        }
      ]
    },
    "client_metrics": {
      "source": {
        "object": "dbo.client_metrics_view",
        "type": "view",
        "key-fields": ["client_id"]
      },
      "permissions": [
        {
          "role": "authenticated",
          "actions": ["read"]
        }
      ]
    },
    "client_payment_status": {
      "source": {
        "object": "dbo.client_payment_status",
        "type": "view",
        "key-fields": ["client_id"]
      },
      "permissions": [
        {
          "role": "authenticated",
          "actions": ["read"]
        }
      ]
    },
    "payment_variance": {
      "source": {
        "object": "dbo.payment_variance_view",
        "type": "view",
        "key-fields": ["payment_id"]
      },
      "permissions": [
        {
          "role": "authenticated",
          "actions": ["read"]
        }
      ]
    },
    "available_payment_periods": {
      "source": {
        "object": "dbo.available_payment_periods",
        "type": "view",
        "key-fields": ["client_id", "year", "period"]
      },
      "permissions": [
        {
          "role": "authenticated",
          "actions": ["read"]
        }
      ]
    },
    "client_fee_reference": {
      "source": {
        "object": "dbo.client_fee_reference",
        "type": "view",
        "key-fields": ["client_id"]
      },
      "permissions": [
        {
          "role": "authenticated",
          "actions": ["read"]
        }
      ]
    },
    "quarterly_totals": {
      "source": {
        "object": "dbo.quarterly_totals",
        "type": "view",
        "key-fields": ["client_id", "year", "quarter"]
      },
      "permissions": [
        {
          "role": "authenticated",
          "actions": ["read"]
        }
      ]
    },
    "yearly_summaries": {
      "source": {
        "object": "dbo.yearly_summaries",
        "type": "view",
        "key-fields": ["client_id", "year"]
      },
      "permissions": [
        {
          "role": "authenticated",
          "actions": ["read"]
        }
      ]
    }
  }
}