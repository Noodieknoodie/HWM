{
  "$schema": "https://developer.microsoft.com/json-schemas/teams/v1.16/MicrosoftTeams.schema.json",
  "manifestVersion": "1.16",
  "version": "1.0.0",
  "id": "{APP_ID}",
  "packageName": "com.hohimer.401ktracker",
  "developer": {
    "name": "Hohimer Wealth Management",
    "websiteUrl": "https://www.hohimer.com",
    "privacyUrl": "https://www.hohimer.com/privacy",
    "termsOfUseUrl": "https://www.hohimer.com/terms"
  },
  "name": {
    "short": "401k Tracker",
    "full": "HWM 401k Payment Tracker"
  },
  "description": {
    "short": "Track 401k client payments and compliance",
    "full": "Internal application for Hohimer Wealth Management to track 401k client fee payments, monitor compliance status, and manage payment schedules."
  },
  "icons": {
    "color": "color.png",
    "outline": "outline.png"
  },
  "accentColor": "#0078D4",
  "staticTabs": [
    {
      "entityId": "401k-tracker-tab",
      "name": "401k Tracker",
      "contentUrl": "{FRONTEND_URL}",
      "websiteUrl": "{FRONTEND_URL}",
      "scopes": ["personal", "team"]
    }
  ],
  "permissions": [
    "identity",
    "messageTeamMembers"
  ],
  "validDomains": [
    "{FRONTEND_DOMAIN}",
    "{API_DOMAIN}"
  ],
  "webApplicationInfo": {
    "id": "{AZURE_CLIENT_ID}",
    "resource": "api://{API_DOMAIN}/{AZURE_CLIENT_ID}"
  }
}